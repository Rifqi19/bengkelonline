<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="-110dp"
        android:src="@drawable/uiheader" />

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="20pt"
        android:textStyle="bold"
        android:fontFamily="@font/playfair"
        android:layout_marginTop="-100dp"
        android:layout_marginBottom="50dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masukkan Email"
        android:textStyle="bold"
        android:fontFamily="@font/playfair"
        android:textColor="@color/black"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"/>
    <EditText
        android:id="@+id/email"
        android:layout_gravity="center"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:drawableStart="@drawable/email"
        android:drawablePadding="10dp"
        android:background="@drawable/custom_input"
        android:paddingStart="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masukkan Password"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/playfair"
        android:textColor="@color/black"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"/>
    <EditText
        android:id="@+id/password"
        android:layout_gravity="center"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:drawableStart="@drawable/password"
        android:drawablePadding="10dp"
        android:paddingStart="10dp"
        android:background="@drawable/custom_input"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="50dp"
        android:text="Belum Punya Akun?"
        android:textStyle="bold"
        android:fontFamily="@font/playfair"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
        android:id="@+id/daftar"
        android:onClick="btndaftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar"
        android:paddingLeft="50dp"
        android:textColor="#0544FF"
        android:fontFamily="@font/playfair"/>

        <TextView
            android:id="@+id/lupapassword"
            android:onClick="btnforget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="130dp"
            android:text="Lupa Password?"
            android:textColor="#0544FF"
            android:fontFamily="@font/playfair"
            android:linksClickable="true"/>
    </LinearLayout>


    <ImageButton
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:layout_gravity="center"
        android:src="@drawable/login"
        android:backgroundTint="@color/white"
        android:onClick="login"/>



</LinearLayout>